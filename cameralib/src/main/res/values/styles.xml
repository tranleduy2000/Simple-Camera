<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.OutlineButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@null</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconSize">@dimen/toggle_icon_size</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">@dimen/icon_size</item>
        <item name="android:minHeight">@dimen/icon_size</item>
    </style>

    <style name="TopIconShadow">
        <item name="android:shadowColor">@color/md_grey_200_dark</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="MaterialSectionLabelStyle">
        <item name="android:layout_marginStart">@dimen/label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsSectionLabelStyle" parent="@style/MaterialSectionLabelStyle">
        <item name="android:layout_marginStart">@dimen/settings_label_start_margin</item>
    </style>

    <style name="SettingsHolderTextViewStyle">
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="SettingsTextLabelStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SettingsTextValueStyle">
        <item name="android:alpha">0.6</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <style name="SettingsHolderCheckboxStyle">
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/medium_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="SettingsCheckboxStyle">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingStart">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
</resources>
