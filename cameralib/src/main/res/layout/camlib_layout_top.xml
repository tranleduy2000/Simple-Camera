<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/default_icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        style="@style/CamlibWidget.App.Button.OutlineButton.IconOnly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/camlib_normal_margin"
        app:icon="@drawable/camlib_round_arrow_back_24"
        app:iconTint="@color/camlib_camera_option_color" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/toggle_timer"
        style="@style/CamlibWidget.App.Button.OutlineButton.IconOnly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/camlib_toggle_timer"
        android:padding="@dimen/camlib_normal_margin"
        app:icon="@drawable/camlib_ic_timer_off_vector" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/toggle_flash"
        style="@style/CamlibWidget.App.Button.OutlineButton.IconOnly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/camlib_toggle_flash"
        android:padding="@dimen/camlib_normal_margin"
        app:icon="@drawable/camlib_ic_flash_off_vector" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_resolution"
        style="@style/CamlibWidget.App.Button.OutlineButton.IconOnly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/camlib_resolution"
        android:padding="@dimen/camlib_normal_margin"
        tools:icon="@drawable/camlib_ic_photo_4x3_vector" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings"
        style="@style/CamlibWidget.App.Button.OutlineButton.IconOnly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/camlib_settings"
        android:padding="@dimen/camlib_normal_margin"
        app:icon="@drawable/camlib_ic_settings_vector" />

</LinearLayout>
